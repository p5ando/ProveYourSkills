<Window x:Class="ProveYourSkills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800" Background="#432E54">
    <Grid Background="#4B4376">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PostTitle"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="10x10 Posts"
                   FontSize="22"
                   Foreground="#AE445A"
                   Margin="10"
                   />
        <Border x:Name="GridBorder"
                Grid.Row="1"
                BorderBrush ="#E8BCB9"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <UniformGrid x:Name="PostsGrid"
                         Width="400"
                         Height="400"
                         Background ="#432E54">
                <UniformGrid.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleContentCommand}"/>
                </UniformGrid.InputBindings>
            </UniformGrid>

        </Border>
    </Grid>
</Window>